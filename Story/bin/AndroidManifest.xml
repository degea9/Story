<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.atat.story"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.atat.story.AllStoriesActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
        </activity>
        <activity
            android:name="com.atat.story.AllChaptersActivity"
            android:label="@string/title_activity_list_chapter" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.atat.story.ReadChapterActivity"
            android:label="@string/title_activity_read_chapter" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.atat.story.AllAudioChaptersActivity"
            android:label="@string/title_activity_all_audio_chapters"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.atat.story.AndroidBuildingMusicPlayerActivity"
            android:label="@string/title_activity_all_audio_chapters" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.atat.story.PlayListActivity"
            android:label="@string/title_activity_all_audio_chapters"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.atat.story.AllCategoriesActivity"
            android:label="@string/title_activity_all_categories"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.atat.story.ManageUserActivity"
            android:label="@string/title_activity_manage_user"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
